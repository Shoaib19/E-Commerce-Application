<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin.AdminMaintainProductsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/product_image_maintain"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter" />

            <EditText
                android:id="@+id/product_name_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_design"
                android:gravity="center_horizontal"
                android:hint="Product Name"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/tab_indicator_text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/product_short_description_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_design"
                android:gravity="center_horizontal"
                android:hint="Short Description"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/tab_indicator_text"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/product_description_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_design"
                android:gravity="center_horizontal"
                android:hint="Product Description"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/tab_indicator_text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/product_category_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_design"
                android:gravity="center_horizontal"
                android:hint="Product Top Category"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/tab_indicator_text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/product_subCategory_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_design"
                android:gravity="center_horizontal"
                android:hint="Product Sub Category"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/tab_indicator_text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/product_merged_Category_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_design"
                android:gravity="center_horizontal"
                android:hint="Product Merged Category"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/tab_indicator_text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/product_price_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_design"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="Product Price"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/tab_indicator_text"
                android:textSize="16sp" />


            <Button
                android:id="@+id/apply_changes_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttons"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="Apply Changes"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/delete_product_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:gravity="center_horizontal"
                android:padding="22dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Delete This Product"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>